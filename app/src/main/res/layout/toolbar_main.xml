<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    android:background="#85a8e5"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


 <android.support.v7.widget.Toolbar
     android:id="@+id/toolbar"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="#605A5A"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintRight_toRightOf="parent">

  <Button
      android:id="@+id/home_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:drawableBottom="@mipmap/home"
      android:onClick="main"
      android:text="Home"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      />


      />

  <Button
      android:id="@+id/overview_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:drawableBottom="@mipmap/barchart"

      android:onClick="stats"
      android:text="Overview"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/home_button" />

  <Button
      android:id="@+id/settings_button"
      style="@style/Widget.AppCompat.Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:drawableBottom="@mipmap/setting"
      android:onClick="einstellungen"
      android:text="Settings"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/overview_button" />

  <Button
      android:id="@+id/help_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:layout_marginEnd="6dp"
      android:layout_marginRight="6dp"
      android:drawableBottom="@mipmap/help"
      android:text="Help"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent" />
 </android.support.v7.widget.Toolbar>



</android.support.constraint.ConstraintLayout>


