<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    android:background="#85a8e5"
    tools:context="com.example.seps.cashofclans.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/Money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="3946.84€"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="40sp"
        tools:layout_editor_absoluteY="97dp"
        tools:layout_editor_absoluteX="115dp" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_settings"
        android:onClick="einstellungen"
        tools:layout_editor_absoluteY="6dp"
        tools:layout_editor_absoluteX="347dp" />


    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="add"
        android:text="Einnahme"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="361dp" />

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="sub"
        android:text="Ausgabe"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="361dp" />

    <Button
        android:id="@+id/Statistik"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="stats"
        android:text="Woche"
        tools:layout_editor_absoluteY="6dp"
        tools:layout_editor_absoluteX="4dp" />

    <Button
        android:id="@+id/button4"
        android:text="DB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="db"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="289dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="6"
        android:orientation="horizontal"
        android:rowCount="2"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="161dp">


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:onClick="shortcut"
            android:scaleType="centerCrop"
            android:tag="Lebensmittel"
            app:srcCompat="@drawable/icon_shoppingcart" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:onClick="shortcut"
            android:scaleType="fitStart"
            android:tag="Bar"
            app:srcCompat="@drawable/icon_beer" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:onClick="shortcut"
            android:scaleType="fitCenter"
            android:tag="Sport"
            app:srcCompat="@drawable/icon_sport" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:onClick="shortcut"
            android:scaleType="fitEnd"
            android:tag="Kleidung"
            app:srcCompat="@drawable/icon_clothes" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:onClick="shortcut"
            android:scaleType="fitEnd"
            android:tag="Bücher"
            app:srcCompat="@drawable/icon_school" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@android:color/transparent"
            android:onClick="shortcut"
            android:scaleType="fitCenter"
            android:tag="Kino"
            app:srcCompat="@drawable/icon_movie" />


    </GridLayout>

</android.support.constraint.ConstraintLayout>
